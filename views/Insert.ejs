        <h1>Employee Insert Page</h1>
    </center>
    <div id="form">
        <form  method="post" action="/datasave">
            <input type="text" name="eno" placeholder="enter employee no">
            <input type="text" name="nm" placeholder="enter employee name">
            <input type="text" name="ct" placeholder="enter employee city">
            <input type="text" name="sal" placeholder="enter employee salary">
            <button type="submit">Submit</button>
        </form>
    </div>
